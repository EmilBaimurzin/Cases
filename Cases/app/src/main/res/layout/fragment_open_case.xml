<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu_horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_margin="12dp"
            android:background="#99000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3">

            <com.plicraz.zynner.game.ui.other.NonScrollableRecyclerView
                android:id="@+id/caseRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:nestedScrollingEnabled="false"
                android:padding="12dp"
                tools:listitem="@layout/item_open_case" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginVertical="12dp"
                android:background="#FFD700" />

        </FrameLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="#99000000"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout"
            app:layout_constraintStart_toStartOf="@+id/frameLayout"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout">

            <LinearLayout
                android:id="@+id/constraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/frameLayout"
                app:layout_constraintStart_toStartOf="@+id/frameLayout"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout">

                <LinearLayout
                    android:id="@+id/drop1Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/item_1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="#EE4B2B" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/drop1TextView"
                        style="@style/BasicText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="12dp"
                        android:paddingTop="2dp"
                        android:textSize="22sp"
                        tools:text="3%" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/drop2Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/item_2" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="#E30B5C" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/drop2TextView"
                        style="@style/BasicText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="12dp"
                        android:paddingTop="2dp"
                        android:textSize="22sp"
                        tools:text="8%" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/drop3Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/item_3" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="#7F00FF" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/drop3TextView"
                        style="@style/BasicText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="12dp"
                        android:paddingTop="2dp"
                        android:textSize="22sp"
                        tools:text="12%" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/drop4Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/item_4" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="#89CFF0" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/drop4TextView"
                        style="@style/BasicText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="12dp"
                        android:paddingTop="2dp"
                        android:textSize="22sp"
                        tools:text="20%" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/drop5Layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/item_5" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="#FFFFFF" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/drop5TextView"
                        style="@style/BasicText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="12dp"
                        android:paddingTop="2dp"
                        android:textSize="22sp"
                        tools:text="57%" />

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginVertical="6dp"
            android:layout_marginStart="12dp"
            android:background="#99000000"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

            <TextView
                android:id="@+id/amountTextView"
                style="@style/BasicText"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="12dp"
                android:layout_weight="1"
                android:background="@drawable/bg_text_first"
                android:textSize="22sp"
                tools:text="Cases left: 10" />

            <com.plicraz.zynner.library.library.CustomButton
                android:id="@+id/openCaseButton"
                style="@style/BasicText"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="12dp"
                android:layout_weight="1"
                android:background="@drawable/bg_text_second"
                android:text="@string/open"
                android:textSize="22sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/img_game_logo"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>