<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BasicText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:fontFamily">@font/capriola</item>
    </style>

    <style name="MenuButtons" parent="BasicText">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/capriola</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDy">4</item>
    </style>

    <style name="LargeCard">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="SmallCard">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
</resources>